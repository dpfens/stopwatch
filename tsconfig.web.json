{
    "compilerOptions": {
      "target": "ES3",
      "lib": ["ES5", "dom"],
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "outFile": "dist/stopwatch.web.js"
    },
    "include": ["src/*.ts"]
}
